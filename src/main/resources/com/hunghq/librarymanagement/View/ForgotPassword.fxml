<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hunghq.librarymanagement.Controller.ForgotPasswordController"
            prefHeight="180.0" prefWidth="350.0">
    <Label layoutX="50.0" layoutY="14.0" text="Enter your email to reset password"
           AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="14.0"/>

    <TextField fx:id="txt_email" layoutX="50.0" layoutY="47.0" promptText="Email address"
               AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="47.0"/>

    <Button layoutX="50.0" layoutY="125.0" onAction="#handleSendEmail" text="Send" AnchorPane.leftAnchor="50.0"
            AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="125.0">
    </Button>

    <Label fx:id="lbl_status" layoutX="50.0" layoutY="100.0" text=""
           AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0"/>

</AnchorPane>
